<root>
	<styles>
		<include src="s2r://panorama/styles/custom_game/custom_loading_screen.vcss_c" />
		<include src="s2r://panorama/styles/custom_game/ads.vcss_c" />
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
	</styles>

	<scripts>
		<include src="s2r://panorama/scripts/custom_game/loading_screen.vjs_c" />
	</scripts>

	<Panel class="AddonLoadingRoot" hittest="false">
		<Panel id="CustomBg">

		<Panel class="CashSteamADS" onactivate="ExternalBrowserGoToURL('http://Cashsteam.ru/?utm_source=dota&utm_medium=cpc&utm_campaign=bmemov')">
			<Label class="CashSteamLabel" text="Площадка для пополнения кошелька Steam в России" />
			<Panel class="CashSteamIcon" />
		</Panel>

		<Panel class="TwitchADS" onactivate="ExternalBrowserGoToURL('https://www.twitch.tv/stranger568')">
			<Label class="TwitchLabel" text="Стрим создателя кастомки - Игры с подписчиками / Разработка кастомки" />
			<Panel class="TwitchIcon" />
		</Panel>

		<Panel class="TelegramADS" onactivate="ExternalBrowserGoToURL('https://t.me/penguin568')">
			<Label class="TelegramLabel" text="Telegram Канал создателя с информацией о кастомке и не только" />
			<Panel class="TelegramIcon" />
		</Panel>







		<Panel id="InfoWidgets" class="WidgetRow">
            <Panel id="RankedInfo" class="Widget">
                <Panel id="RankedInfoContainer" class="Hidden WidgetContainer">
                    <Panel id="RankedSeasonInfo">
                        <Panel id="RankedSeasonTop">
                            <Label class="WidgetHeader" text="#TopMmrPlayersSeasonLabel"/>
                            <Panel id="RankedTopPlayers" class="RankedPlayers">
		                        <Panel class="TopMmrPlayersSeasonPlayer">
		                        	<Panel class="Player">	                    
										<DOTAAvatarImage steamid="76561198032647690" class="RankedSeasonCongratulationsPlayerAvatar" />
										<Panel class="TrophyClass"/>	
									</Panel>
									<Panel class="RogaPlayer">
										<DOTAParticleScenePanel id="PlayerModifiedParticleAegis" hittest="false" particleName="particles/dev/library/base_fire.vpcf" particleonly="true" startActive="true" cameraOrigin="100 300 100" lookAt="0 90 -70" fov="60" squarePixels="true" />

										<DOTAParticleScenePanel id="PlayerModifiedParticleAegis2" hittest="false" particleName="particles/dev/library/base_fire.vpcf" particleonly="true" startActive="true" cameraOrigin="100 -300 100" lookAt="0 -90 -70" fov="60" squarePixels="true" />

										<Panel class="RogaClass"/>
										<DOTAAvatarImage steamid="76561198335568734" class="RankedSeasonCongratulationsPlayerAvatar" />
										<Panel class="TrophyClassRoga"/>
									</Panel>
									<Panel class="Player">	
										<DOTAAvatarImage steamid="76561198278833971" class="RankedSeasonCongratulationsPlayerAvatar" />
										<Panel class="TrophyClass"/>
									</Panel>
								</Panel>
                            </Panel>
                        </Panel>
                    </Panel>
                </Panel>
				<Panel class="News">
					<Panel id="TipContainer" onactivate="NextTip()">
						<Label class="NewWidgetLabel" text="#Sovetsforyou"/>
						<Panel id="TipText">
							<Label id="TipLabel" text="#LoadingTip_1"/>
						</Panel>
						<Panel id="NextTip" class="TipButton" onactivate="NextTip()"/>
					</Panel>
					<Panel id="DonateContainer" onactivate="ExternalBrowserGoToURL('https://www.patreon.com/BirzhaMemov')">
						<Label class="NewWidgetLabel" text="#Contributepanel"/>
						<Panel id="DonateInformation">
							<Label id="TipLabel" text="#LoadingDonate"/>
						</Panel>
						<Panel id="PassIcon" class="PassIcon"/>
					</Panel>
					<Panel id="DonateContainer_2" onactivate="ExternalBrowserGoToURL('https://bmemov.ru/updates/augustupdate/')">
						<Label class="NewWidgetLabel" text="#Updatename"/>
						<Panel id="DonateInformation_2">
							<Label id="TipLabel" text="#Updatedescription"/>
						</Panel>
					</Panel>
				</Panel>
            </Panel>
        	</Panel>
			</Panel>		
		</Panel>
</root>